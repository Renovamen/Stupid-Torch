<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewShape"
        android:layout_width="@dimen/size_shape"
        android:layout_height="@dimen/size_shape"
        android:layout_gravity="center"
        android:src="@drawable/shape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageViewOff"
        android:layout_width="@dimen/size_image"
        android:layout_height="@dimen/size_image"
        android:layout_gravity="center"
        android:src="@drawable/img_off"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageViewOn"
        android:layout_width="@dimen/size_image"
        android:layout_height="@dimen/size_image"
        android:layout_gravity="center"
        android:src="@drawable/img_on"
        android:alpha="0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>